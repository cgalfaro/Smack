<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content">

    <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp" tools:srcCompat="@drawable/dark3"
            android:id="@+id/messageUserImage" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/messageUserNameLbl" tools:text="CarlosA" app:layout_constraintStart_toEndOf="@+id/messageUserImage"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/timeStampLbl" tools:text="March 11, 10:30 PM"
            app:layout_constraintStart_toEndOf="@+id/messageUserNameLbl" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/messageBodyLbl"
            tools:text="Reprehenderit proident, ea reprehenderit. Exercitation elit, velit tempor quis officia. Eiusmod est deserunt quis. Incididunt esse dolore tempor pariatur enim. Esse laboris Excepteur elit, ullamco labore. Minim dolor labore mollit. Quis sint exercitation eu. In proident, aliqua in. Dolore ad Duis culpa. Exercitation sunt nisi adipiscing incididunt. Est quis aute sint. Velit mollit elit, Excepteur. Enim aliquip incididunt occaecat anim tempor. Do ex ea dolor et consequat. Veniam, dolore mollit ut sint sunt. Commodo esse laboris quis Duis nisi. Incididunt veniam, commodo laboris magna. Consectetur eu sint ut. "
            app:layout_constraintStart_toEndOf="@+id/messageUserImage" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/timeStampLbl"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>